extends layout.pug

block content 
  nav.grid-container.portfolio-breadcrumb
    a(href='/') ‚Üê Back
  article.grid-container.portfolio-intro.portfolio-project
    .grid-x
      .cell.small-6.medium-9.large-9

        h1= data[id].project_name

        
        p.lead.text-light= data[id].description
          | 
      .cell.portfolio-meta.small-6.medium-2.large-3
        h6 Technologies

        //
        ul
          each tech in data[id].technologies
            li= tech

        a.button.expanded(target= '_blank' href=`${data[id].live_link}`) Live Demo
        a.button.expanded(target = '_blank' href=`${data[id].github_link}`) GitHub Repo


    each img in data[id].image_urls
      img.image(src=`.${img}`)